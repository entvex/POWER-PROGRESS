<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/PPDark"
    android:layout_height="match_parent">

    <Button
        android:text="@android:string/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_ok_profileActivity"
        android:background="@color/PPOrange"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/PPText"/>

    <CheckBox
        android:textColor="@color/PPText"
        android:text="Overhead Press"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ckb_overheadpress_profileActivity"
        app:layout_constraintLeft_toLeftOf="@+id/ckb_BenchPress_profileActivity"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ckb_BenchPress_profileActivity" />

    <CheckBox
        android:text="Squat"
        android:textColor="@color/PPText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ckb_Squat_profileActivity"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ckb_deadlift_profileActivity"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/ckb_deadlift_profileActivity" />

    <CheckBox
        android:textColor="@color/PPText"
        android:text="DeadLift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ckb_deadlift_profileActivity"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ttv_qualifications_profileActivity"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/ttv_qualifications_profileActivity" />

    <CheckBox
        android:textColor="@color/PPText"
        android:text="BenchPress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ckb_BenchPress_profileActivity"
        app:layout_constraintTop_toBottomOf="@+id/ckb_Squat_profileActivity"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/ckb_Squat_profileActivity" />

    <TextView
        android:textColor="@color/PPText"
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ttv_Lable_name_profileActivity"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/imv_profilePhoto_ProfileActivity"
        app:layout_constraintBottom_toBottomOf="@+id/ttv_name_profileActivity"
        app:layout_constraintTop_toTopOf="@+id/ttv_name_profileActivity" />

    <TextView
        android:textColor="@color/PPText"
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ttv_Lable_name_profileActivity"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/ttv_email_profileActivity"
        app:layout_constraintTop_toTopOf="@+id/ttv_email_profileActivity"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/imv_profilePhoto_ProfileActivity" />

    <TextView
        android:textColor="@color/PPText"
        android:text="Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ttv_Lable_name_profileActivity"
        app:layout_constraintBottom_toBottomOf="@+id/ett_age_profileActivity"
        app:layout_constraintTop_toTopOf="@+id/ett_age_profileActivity"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/imv_profilePhoto_ProfileActivity" />

    <TextView
        android:textColor="@color/PPOrange"
        android:text="Qualifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ttv_qualifications_profileActivity"
        android:textStyle="bold"
        android:textSize="18sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="48dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:textColorLink="?attr/colorBackgroundFloating"
        android:textColor="@color/PPText"
        android:textColorHint="@color/PPText"
        android:layout_width="92dp"
        android:layout_height="46dp"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/ett_age_profileActivity"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/ttv_email_profileActivity" />

    <ImageView
        android:layout_width="100dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imv_profilePhoto_ProfileActivity"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:text="TextView"
        android:textColor="@color/PPText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ttv_name_profileActivity"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toRightOf="@+id/ttv_Lable_name_profileActivity" />

    <TextView
        android:text="TextView"
        android:textColor="@color/PPText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ttv_email_profileActivity"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ttv_name_profileActivity"
        app:layout_constraintLeft_toLeftOf="@+id/ttv_name_profileActivity" />

    <TextView
        android:textColor="@color/PPOrange"
        android:text="Notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ttv_notifications_profileActivity"
        app:layout_constraintRight_toLeftOf="@+id/ttv_qualifications_profileActivity"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:text="Enable"
        android:textColor="@color/PPText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ckb_notifications_profileActivity"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ttv_notifications_profileActivity"
        android:layout_marginStart="3dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/ttv_notifications_profileActivity" />
</android.support.constraint.ConstraintLayout>