<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_comment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="powerprogress.powerprogress.AddCommentActivity"
    android:background="@color/PPDark">

    <Button
        android:text="@string/AddCommentActivity_StaticSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_submitComment_AddCommentActivity"
        android:background="@color/PPOrange"
        android:textColor="@color/PPText"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:height="60dp"
        android:width="240dp" />

    <TextView
        android:text="@string/AddCommentActivity_StaticTitel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/txt_staticGuidance_AddCommentActivity"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold"
        android:textColor="@color/PPText"
        android:textSize="24sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/edt_comment_AddCommentActivity"
        android:hint="@string/AddCommentActivity_StaticHint"
        tools:textColor="@color/PPText"
        android:textAlignment="viewStart"
        android:textColor="@color/PPText"
        android:layout_below="@+id/txt_staticGuidance_AddCommentActivity"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColorHint="@color/PPText"
        android:textSize="20sp" />
</RelativeLayout>
