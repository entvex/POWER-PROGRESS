<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/PPDark"
    tools:context="powerprogress.powerprogress.ProfileActivity">

    <ImageView
        android:layout_width="150dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imv_profilePhoto_ProfileActivity"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:layout_height="150dp"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:textColor="@color/PPText"
        android:text="@string/profileActivity_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ttv_Lable_name_profileActivity"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/imv_profilePhoto_ProfileActivity"
        app:layout_constraintTop_toTopOf="@+id/imv_profilePhoto_ProfileActivity"
        android:layout_marginTop="8dp" />

    <TextView
        android:textColor="@color/PPText"
        android:text="@string/profileActivity_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ttv_Lable_email_profileActivity"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/ttv_Lable_name_profileActivity"
        app:layout_constraintLeft_toLeftOf="@+id/ttv_Lable_name_profileActivity" />

    <TextView
        android:textColor="@color/PPText"
        android:text="@string/profileActivity_Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ttv_lable_age_profileActivity"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/ttv_Lable_email_profileActivity"
        app:layout_constraintLeft_toLeftOf="@+id/ttv_Lable_email_profileActivity"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <TextView
        android:textColor="@color/PPText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ttv_name_profileActivity"
        android:textSize="20sp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/ttv_Lable_name_profileActivity"
        app:layout_constraintTop_toTopOf="@+id/ttv_Lable_name_profileActivity" />

    <TextView
        android:textColor="@color/PPText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ttv_email_profileActivity"
        app:layout_constraintTop_toTopOf="@+id/ttv_Lable_email_profileActivity"
        app:layout_constraintBottom_toBottomOf="@+id/ttv_Lable_email_profileActivity"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/ttv_name_profileActivity" />

    <EditText
        android:textColorLink="?attr/colorBackgroundFloating"
        android:textColor="@color/PPText"
        android:textColorHint="@color/PPText"
        android:layout_width="92dp"
        android:layout_height="46dp"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/ett_age_profileActivity"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/ttv_email_profileActivity"
        app:layout_constraintTop_toTopOf="@+id/ttv_lable_age_profileActivity"
        app:layout_constraintBottom_toBottomOf="@+id/ttv_lable_age_profileActivity" />

    <Button
        android:text="@string/profileActivity_Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_ok_profileActivity"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/PPOrange"
        android:textColor="@color/PPText"
        android:height="60dp"
        android:width="240dp"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <CheckBox
        android:textColor="@color/PPText"
        android:text="@string/option_deadlift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ckb_deadlift_profileActivity"
        app:layout_constraintTop_toBottomOf="@+id/ttv_qualifications_profileActivity"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp" />

    <TextView
        android:textColor="@color/PPOrange"
        android:text="@string/profileActivity_Qualification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ttv_qualifications_profileActivity"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/imv_profilePhoto_ProfileActivity"
        tools:layout_constraintLeft_creator="1"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="64dp" />

    <TextView
        android:textColor="@color/PPOrange"
        android:text="@string/profileActivity_Notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ttv_notifications_profileActivity"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/ckb_BenchPress_profileActivity" />

    <CheckBox
        android:text="@string/option_squat"
        android:textColor="@color/PPText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ckb_Squat_profileActivity"
        android:textSize="20sp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/ckb_deadlift_profileActivity"
        app:layout_constraintTop_toTopOf="@+id/ckb_deadlift_profileActivity" />

    <CheckBox
        android:textColor="@color/PPText"
        android:text="@string/option_bench"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ckb_BenchPress_profileActivity"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/ckb_Squat_profileActivity"
        app:layout_constraintTop_toTopOf="@+id/ckb_Squat_profileActivity"
        android:layout_marginStart="16dp" />

    <CheckBox
        android:textColor="@color/PPText"
        android:text="@string/option_overheadpress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ckb_overheadpress_profileActivity"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/ckb_BenchPress_profileActivity"
        app:layout_constraintTop_toTopOf="@+id/ckb_BenchPress_profileActivity"
        android:layout_marginStart="16dp" />

    <CheckBox
        android:textColor="@color/PPText"
        android:text="Enable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ckb_notifications_profileActivity"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ttv_notifications_profileActivity"
        android:textSize="20sp" />

</android.support.constraint.ConstraintLayout>
