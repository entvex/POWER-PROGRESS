<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/PPDark">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Menu"
        android:text="Comment"
        android:id="@+id/ttv_comment_commentListItem"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/PPText"
        android:inputType="textMultiLine"
        android:textSize="20sp"
        app:layout_constraintRight_toLeftOf="@+id/ttv_timestamp_commentListItem"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/PPText"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/ttv_comment_commentListItem"
        android:id="@+id/view"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:text="timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ttv_timestamp_commentListItem"
        android:textColor="@color/PPText"
        android:layout_marginEnd="4dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        android:textSize="16sp" />

    <TextView
        android:text="Author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ttv_author_commentListItem"
        android:textColor="@color/PPText"
        android:layout_marginEnd="4dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="normal|bold"
        android:textSize="16sp" />


</android.support.constraint.ConstraintLayout>
